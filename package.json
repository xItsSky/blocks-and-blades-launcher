{
  "name": "blocks-and-blades-launcher",
  "version": "1.0.0",
  "description": "the launcher of the blocks and blades minecraft server",
  "homepage": "https://github.com/xItsSky/blocks-and-blades-launcher#readme",
  "bugs": {
    "url": "https://github.com/xItsSky/blocks-and-blades-launcher/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xItsSky/blocks-and-blades-launcher.git"
  },
  "license": "MIT",
  "author": "Emo Quentin",
  "type": "commonjs",
  "main": "dist/main/main.js",
  "scripts": {
    "build": "tsc && cp src/renderer/index.html dist/renderer/index.html && mkdir -p dist/renderer/styles && cp src/renderer/styles/main.css dist/renderer/styles/main.css && mkdir -p dist/renderer/assets && cp src/renderer/assets/bg.jpg dist/renderer/assets/bg.jpg",
    "start": "npm run build && electron .",
    "package": "npm run build && electron-builder",
    "package:mac": "npm run build && electron-builder --mac",
    "package:win": "npm run build && electron-builder --win",
    "package:all": "npm run build && electron-builder --mac --win"
  },
  "build": {
    "appId": "com.blocks-and-blades.launcher",
    "productName": "BlocksAndBladesLauncher",
    "directories": {
      "output": "dist-build"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "xItsSky",
        "repo": "blocks-and-blades-launcher"
      }
    ],
    "mac": {
      "artifactName": "BlocksAndBladesLauncher-Mac.${ext}",
      "category": "public.app-category.games",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "artifactName": "BlocksAndBladesLauncher.${ext}",
      "target": [
        "portable",
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.105.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/node-fetch": "^2.6.13",
    "adm-zip": "^0.5.16",
    "minecraft-launcher-core": "^3.18.2",
    "msmc": "^3.1.5",
    "node-fetch": "^2.7.0"
  }
}
